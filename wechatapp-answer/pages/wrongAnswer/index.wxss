/* pages/wrongAnswer/index.wxss */

page {
  overflow-x: hidden;
}

.question-list {
  padding: 15px;
}

.question-list-title {
  font-size: 15px;
}

.question-title {
  margin-left: 8px;
  line-height: 25px;
}

.line {
  margin-top: 50rpx;
  display: flex;
  border-bottom: 1rpx solid #5d5d5d;
  align-items: center;
  justify-content: space-around;
  z-index: 8;
  margin-bottom: 60rpx;
}

.showAnswer {
  font-size: 32rpx;
  padding: 10rpx 20rpx 10rpx 20rpx;
  border: 1rpx solid #5d5d5d;
  border-radius: 15rpx;
  margin-bottom: -32rpx;
  background-color: #fff;
}
.answer{
  padding:26rpx;
}
.answerTitle{
  color: #717171;
  font-size: 32rpx;
  margin-bottom: 26rpx;
}
.answerContent{
  font-size: 32rpx;
  margin-bottom: 26rpx;
}
.tab-bar {
  background: #fff;
  position: fixed;
  bottom: 0px;
  width: 100%;
}

